</head>
<body id="nv_member">
    <div id="append_parent">
    </div>
    <div class="widthMAX TopBg">
        <div class="width1180 Top">
            @RenderPage("~/Views/Shared/_LoginHeader.cshtml")
        </div>
    </div>
    <script type="text/javascript">

        jQuery(function ($) {
            var href = window.location.href.toLowerCase();
            addCurrentMenuClass(href);
            $(".top_r a").removeClass("now");
            $(".top_r a.managerlink").addClass("now");
        });


        function addCurrentMenuClass(href) {
            //        var href = window.location.href.toLowerCase();
            var $ = jQuery;
            $("#catalogList li").each(function () {
                var currentUrl = $(this).find("a").attr("href").toLowerCase();

                if (href.indexOf(currentUrl) != -1) {
                    $("#catalogList li").removeClass("selected");
                    $(this).addClass("selected");
                    return false;
                }
            });
        }

    </script>

    <div id="wp" class="wp">
        <link href="/asset/css/style.css" rel="stylesheet" type="text/css" />
        <!--中间内容-->
        <div class="contentmanage">
            <div class="developer">
                <div class="appTitle normalTitle" style="padding: 20px;">
                    <h2>
                        管理平台
                    </h2>
                    <div class="accountInfo">
                    </div>
                    <div class="clr">
                    </div>
                </div>
                <div class="tableContent">
                    <!--左侧功能菜单-->
                    <div class="sideBar">
                        <div class="catalogList" id="catalogList">
                            <ul>

                                @Html.Raw(MP.Role.Businuss.CurrentUserInfo.CurrentUser.UserMenuHtml)
                            </ul>
                        </div>
                    </div>
                    <div class="content">
                        @RenderBody()

                    </div>
                    <div class="clr">
                    </div>
                </div>
            </div>
        </div>
        <!--底部-->
    </div>

    <div class="foot" style="bottom: 0; padding: 10px0; width: 100%;">
        <link rel="stylesheet" type="text/css" href="/asset/css/footer.css" />
        <div class="footerbg2" style="text-align: center; padding: 0px;"><h2>湖南省微时代科技有限公司© 版权所有 中华人民共和国ICP备案-湘ICP备10202877号-1 </h2></div>
    </div>
    </div>
    <script type="text/javascript">
        jQuery(function ($) {
            g1 = $(".pages > ul").find("li").index($(".curs"));
            $(".pages > ul > li").click(function () {
                $(".pages > ul > li").removeClass("curs");
                $(this).addClass("curs");
                g = $(".pages > ul").find("li").index($(".curs"));
                $(".screens").animate({ left: (parseInt(-100 * g)) + "%" }, 1000);
                var t_name = "text" + g;
                $(".text" + g1).animate({ top: 80, opacity: 'hide' }, 500);
                $(".text" + g).animate({ top: 30, opacity: 'show' }, 500);
                $(".tel" + g1).animate({ top: 100, opacity: 'hide' }, 500);
                $(".tel" + g).animate({ top: 40, opacity: 'show' }, 500);
                g1 = g;
            })
            $(".service_list > div").hover(
	      function () {
	          $(this).children().children(".bottom").animate({ height: '36px' }, 500)
	      }, function () {
	          $(this).children().children(".bottom").animate({ height: '24px' }, 500)
	      })
        }
)
    </script>
    <script type="text/javascript">
        jQuery(function ($) {
            $(".big_pic").hover(function () {
                $(this).children(".erwei").animate({ bottom: -60, opacity: 'show' }, 200);
            }, function () {
                $(this).children(".erwei").animate({ bottom: -50, opacity: 'hide' }, 200);
            }
	);
            var href = window.location.href.toLowerCase();
            $(".top_r a").each(function () {
                var currentUrl = $(this).attr("href").toLowerCase();
                if (href.indexOf(currentUrl) != -1 && currentUrl != "/") {
                    //                    alert(currentUrl);
                    $(".top_r a").removeClass("now");
                    $(this).addClass("now");
                    return false;
                }
            });




        });



    </script>
    <div id="discuz_tips" style="display: none;">
    </div>
